<h1>Book</h1>
<table class="table table-striped">
  <tr>
    <th>year</th>
    <th>inout</th>
    <th>category</th>
    <th>amount</th>
    <th>link</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%=book.year %>年<%=book.month %>月</td>
      <td><%=book.inout %></td>
      <td><%=book.category %></td>
      <td><%=book.amount %>万円</td>
      <td>
        <%=link_to "detail", book_path(book), class: "btn btn-info" %>
      </td>
    </tr>
  <% end %>
</table>

